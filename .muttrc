bind editor <space> noop
set alias_file = '~/.mutt/alias.sh'
# Folder hooks
folder-hook 'account.com.gmail.oncomouse' 'source ~/.mutt/account.com.gmail.oncomouse'
folder-hook 'account.edu.tamu.apilsch' 'source ~/.mutt/account.edu.tamu.apilsch'

set editor = "vim +/^$ ++1"

# Default account
source ~/.mutt/account.edu.tamu.apilsch
set ssl_force_tls = yes
# Macros for switching accounts
macro index <f2> '<sync-mailbox><enter-command>source ~/.mutt/account.edu.tamu.apilsch<enter><change-folder>!<enter>'
macro index <f3> '<sync-mailbox><enter-command>source ~/.mutt/account.com.gmail.oncomouse<enter><change-folder>!<enter>'

unset imap_passive
unset record

# Gmail-style keyboard shortcuts
macro index ga "<change-folder>=[Gmail]/All Mail<enter>" "Go to all mail"
macro index gd "<change-folder>=[Gmail]/Drafts<enter>" "Go to drafts"
macro index gi "<change-folder>=INBOX<enter>" "Go to inbox"
macro index gs "<change-folder>=[Gmail]/Starred<enter>" "Go to starred messages"
macro index gt "<change-folder>=[Gmail]/Trash<enter>" "Go to trash"
macro index,pager d "<save-message>=[Gmail]/Trash<enter><enter>" "Trash"
macro index,pager y "<save-message>=[Gmail]/All Mail<enter><enter>" "Archive"

set sort_aux=reverse-last-date-received
set sort=threads

# Fetch mail shortcut
bind index G imap-fetch-mail
