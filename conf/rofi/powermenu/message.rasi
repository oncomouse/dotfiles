/* Message Dialog */

@import "~/.cache/wal/colors-powermenu"

* {
    background-color:       @background;
    text-color:             @foreground;
	font:				 	"FiraCode Nerd Font 16";
}

window {
    width:      			560px;
    padding:    			25px;
    border:					1px;
    border-radius:          0px;
    border-color:           @border;
    location:               center;
    y-offset:               -2em;
}

entry {
    expand: 				true;
    text-color:				@border;
}
