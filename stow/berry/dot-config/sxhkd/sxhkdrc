## Launchers
super + e
	dotfiles-fm

super + shift + Return
	dotfiles-term

super + alt + {r,w}
	rofi -match fuzzy -auto-select -font "Inter Medium 12" -show {drun,window} -show-icons {-drun-display-form \{name\}, -window-format "\\{w\\} \\{c\\} \\{t:25\\}" }

super + alt + space
	rofi -show emoji -modi emoji -location 1 -theme-str "window \\{ width: 100%; \\}"

super + alt + p
	rofimusic.sh "Inter Medium 12"

super + shift + p
	dotfiles-powermenu

## Media Keys

# Previous / Next Song
XF86Audio{Prev,Next,Play,Stop}
	dotfiles-media {prev,next,play,stop}

# Raise or Lower Volume
XF86Audio{Lower,Raise}Volume
	dotfiles-volume {down,up}

# Mute
XF86AudioMute
	dotfiles-volume mute

# Brightness Up or Down
XF86MonBrightness{Up,Down}
	dotfiles-brightness {up,down}

# Keyboard Backlight Up or Down
XF86KbdBrightness{Up,Down}
	sudo /usr/local/bin/keyboard-backlight {up,down}

# Set Default Brightness
super + shift + b
	dotfiles-brightness default

## WM Commands

# Reload
super + q
	berry_config; \
	pkill -SIGUSR1 sxhkd

# Quit
super + shift + q
	berryc quit

# Switch windows
super + Tab
	berryc cycle_focus

super + {h,j,k,l}
	berryc cardinal_focus {2,3,1,0}

## Desktop Commands

# Switch and Send to Desktops
super + {_,shift} + {1-9}
	pkill -RTMIN+1 lemonaid; \
    berryc {switch_workspace, send_to_workspace} {0-8}

## Window Commands

# Maximize, Center, Fullscreen
super + {m,c,f}
    berryc {window_monocle,window_center,fullscreen}

# Raise
super + r
	berryc pointer_focus;\
	berryc window_raise

# Resize windows
super + {_,shift} + {Left, Up, Down, Right}
	berryc {window_move, window_resize} {-25 0, 0 -25, 0 25, 25 0}

# Snap Right and Left
super + {p,o}
    berryc {snap_right,snap_left}

# Toggle Decorations
super + n
    berryc toggle_decorations

# Close
super + w
    berryc window_close

~button1
    berryc pointer_focus
