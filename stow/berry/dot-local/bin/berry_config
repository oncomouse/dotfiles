#!/bin/bash

## Berry Config:
source ~/.cache/wal/colors.sh

# Set decoration geometry
berryc border_width       0
berryc inner_border_width 4
berryc title_height       22
berryc top_gap            30

# Set decoration colors
berryc focus_color         "${color8//#/}"
berryc unfocus_color       "${color8//#/}"
berryc inner_focus_color   "${color8//#/}"
berryc inner_unfocus_color "${color0//#/}"
berryc text_focus_color    "${color15//#/}"
berryc text_unfocus_color  "${color8//#/}"

# Other options
berryc smart_place "true"
berryc draw_text   "true"
berryc edge_lock   "true"
berryc set_font    "Inter-10"

# Move and resize
berryc move_mask "mod5"
berryc resize_mask "mod5|shift"

# Proper desktop names:
for i in {0..8}; do
	berryc name_desktop "$i" "$((i+1))"
done

#vim:ft=sh
