#!/usr/bin/env bash
case $1 in
	up) xbacklight -inc 5;;
	down) xbacklight -dec 5;;
	default) xbacklight -set 50 ;;
esac
output="$(xbacklight 2> /dev/null | cut -d . -f 1)"
if [ ${#output} -gt 0 ]; then
	dunstify -i xfpm-brightness-lcd -h string:x-dunst-stack-tag:brightness "$output%"
fi
# vim:ft=sh
