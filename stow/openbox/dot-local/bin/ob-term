#!/usr/bin/env bash
DOTFILES_TARGET="$( [ -e ~/.local/share/dotfiles/target ] && /bin/cat ~/.local/share/dotfiles/target)"

if [ "$DOTFILES_TARGET" == "desktop" ]; then
	exec kitty "$@"
elif [ "$DOTFILES_TARGET" == "laptop" ]; then
	# exec tabbed -r 2 -c st -w '' "$@"
	exec wezterm "$@"
else
	exec xterm "$@"
fi
# vim:ft=sh
