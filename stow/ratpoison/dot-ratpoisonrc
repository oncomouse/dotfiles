exec ~/dotfiles/conf/ratpoison/autostart &

exec ~/dotfiles/conf/ratpoison/workspaces.sh 6

escape C-z

# [workspaces]
bind M-Right exec rpwsn
bind M-Left exec rpwsp

bind Return exec dotfiles-term &
bind f exec dotfiles-fm &
bind q quit

bind h focusleft
bind j focusdown
bind k focusup
bind l focusright

# [windows]
bind w exec ratpoison -c "select $(ratpoison -c "windows (%n)%a" | rofi -dmenu)" &

# [groups]
bind C-g exec ratpoison -c "gnew $(ratpoison -c "prompt Create new group:")" &
bind M-g exec ratpoison -c "gmove $(ratpoison -c groups | rofi -dmenu | cut -c 2-20 | sed -e 's/[+*-]//g')" &
bind g exec ratpoison -c "gselect $(ratpoison -c groups | rofi -dmenu | cut -c 2-20 | sed -e 's/[+*-]//g')" &

# [launchers]
definekey top M-r exec rofi -show drun
definekey top M-p exec rofimusic.sh
# vim:ft=ratpoison
