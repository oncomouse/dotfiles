exec ~/dotfiles/conf/ratpoison/autostart &

# [settings]
exec rp-colors.sh &
set bargravity c
set font "JetBrainsMono Nerd Font:size=13"
escape s-space

# [workspaces]
bind M-Right exec rpwsn
bind M-Left exec rpwsp
exec rp-workspaces.sh 6

# [launchers]
bind Return exec dotfiles-term &
bind f exec dotfiles-fm &

# [switch panes]
bind h focusleft
bind j focusdown
bind k focusup
bind l focusright

# [zoom]
bind z exec rp-zoom.sh

# [windows]
bind w exec ratpoison -c "select $(ratpoison -c "windows (%n)%a" | rofi -dmenu -match fuzzy -auto-select | sed -e "s/(\([0-9]\+\)).*\$/\1/")" &

# [groups]
bind C-g exec ratpoison -c "gnew $(ratpoison -c "prompt Create new group:")" &
bind M-g exec ratpoison -c "gmove $(ratpoison -c groups | rofi -dmenu -match fuzzy -auto-select | cut -c 2-20 | sed -e 's/[+*-]//g')" &
bind g exec ratpoison -c "gselect $(ratpoison -c groups | rofi -dmenu -match fuzzy -auto-select | cut -c 2-20 | sed -e 's/[+*-]//g')" &

# [launchers]
definekey top M-s-r exec rofi -show drun
definekey top M-s-p exec rofimusic.sh
definekey top s-P exec dotfiles-powermenu
# vim:ft=ratpoison
