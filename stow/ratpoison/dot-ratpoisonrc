exec ~/dotfiles/conf/ratpoison/autostart &

# [hooks]
addhook switchgroup exec pkill -RTMIN+1 lemonaid &
addhook switchgroup exec pkill -RTMIN+2 lemonaid &
addhook switchwin exec pkill -RTMIN+2 lemonaid &
addhook switchwin exec rp-zoom.sh check
addhook deletewindow exec rp-zoom.sh check
addhook switchframe exec pkill -RTMIN+2 lemonaid &
addhook deletewindow exec pkill -RTMIN+2 lemonaid &

# [settings]
escape s-space
exec rp-colors.sh &
set startupmessage 0
set border 2
set bargravity c
set font "JetBrainsMono Nerd Font:size=11"
set padding 0 22 0 0
set onlyborder 0

# [functionality]
bind Escape abort

# [To be redefined]
unbind b
unbind c
unbind f
unbind h
unbind j
unbind k
unbind l
unbind t
unbind S
unbind s
unbind C-h
unbind C-j
unbind C-k
unbind C-l

# [launchers]
alias battery exec ratpoison -c "echo $(acpi -b)" &
alias fm exec dotfiles-fm &
alias term exec dotfiles-term &
alias time exec ratpoison -c "echo $(date +"%a %-m/%d %-I:%M %p")" &
alias default-brightness exec dotfiles-brightness default &
bind c term
bind s-c term
bind f fm
bind s-f fm
bind b battery
bind s-b battery
bind t time
bind s-t time
bind B default-brightness

# [switch frames]
bind Tab fselect
bind h focusleft
bind j focusdown
bind k focusup
bind l focusright
bind C-h exchangeleft
bind C-j exchangedown
bind C-k exchangeup
bind C-l exchangeright
bind s-h focusleft
bind s-j focusdown
bind s-k focusup
bind s-l focusright
bind C-s-h exchangeleft
bind C-s-j exchangedown
bind C-s-k exchangeup
bind C-s-l exchangeright

# [reverse splits]
bind s hsplit
bind S split

# [zoom]
alias zoom exec rp-zoom.sh &
bind z zoom
bind s-z zoom

# [windows]
alias rp-windows exec rp-windows.sh &
bind w rp-windows
bind s-w rp-windows

# [groups]
alias rp-gnew exec ratpoison -c "gnew $(ratpoison -c "prompt Create new group:")" &
alias rp-gmove exec ratpoison -c "gmove $(ratpoison -c groups | rofi -dmenu -match fuzzy -auto-select | cut -c 2-20 | sed -e 's/[+*-]//g')" &
alias rp-gselect exec ratpoison -c "gselect $(ratpoison -c groups | rofi -dmenu -match fuzzy -auto-select | cut -c 2-20 | sed -e 's/[+*-]//g')" &
bind C-g rp-gnew
bind M-g rp-gmove
bind g rp-gselect

# [launchers]
definekey top M-s-r exec rp-run.sh &
definekey top s-P exec rp-powermenu.sh &
definekey top M-s-p exec rofimusic.sh "$(ratpoison -c 'set font' | sed -e 's/:size=/ /')" &
definekey top M-s-k exec dotfiles-unicode "$(ratpoison -c 'set font' | sed -e 's/:size=/ /')" &
definekey top C-s-space exec dotfiles-emoji "$(ratpoison -c 'set font' | sed -e 's/:size=/ /')" &
bind C-exclam colon exec dotfiles-term -e

# [screenshots]
bind Print exec dotfiles-screenshot

# [workspaces]
exec rpws init 6 -a
definekey top s-Right rpwsn
definekey top s-Left rpwsp
definekey top s-1 rpws1
definekey top s-2 rpws2
definekey top s-3 rpws3
definekey top s-4 rpws4
definekey top s-5 rpws5
definekey top s-6 rpws6
definekey top s-exclam rpwsm1 &
definekey top s-at rpwsm2 &
definekey top s-numbersign rpwsm3 &
definekey top s-dollar rpwsm4 &
definekey top s-percent rpwsm5 &
definekey top s-asciicircum rpwsm6 &

# [mediakeys]
definekey top XF86KbdBrightnessDown exec sudo /usr/local/bin/keyboard-backlight down &
definekey top XF86KbdBrightnessUp exec sudo /usr/local/bin/keyboard-backlight up &
definekey top XF86MonBrightnessUp exec dotfiles-brightness up &
definekey top XF86MonBrightnessDown exec dotfiles-brightness down &
definekey top XF86AudioMute exec dotfiles-volume mute &
definekey top XF86AudioLowerVolume exec dotfiles-volume down &
definekey top XF86AudioRaiseVolume exec dotfiles-volume up &
definekey top XF86AudioPlay exec dotfiles-media play &
definekey top XF86AudioPrev exec dotfiles-media prev &
definekey top XF86AudioNext exec dotfiles-media next &
definekey top XF86AudioStop exec dotfiles-media stop &
definekey top XF86PowerOff exec dotfiles-power &

# [unused keys]
unbind Left
unbind Right
unbind Up
unbind Down
unbind C-Left
unbind C-Right
unbind C-Up
unbind C-Down
unbind C-Return
unbind a

# [Replaced w/ Super key bindings]
unbind C-A
unbind C-K
unbind C-S
unbind C-V
unbind C-a
unbind C-apostrophe
unbind C-b
unbind C-c
unbind C-f
unbind C-i
unbind C-k
unbind C-m
unbind C-n
unbind C-p
unbind C-r
unbind C-s
unbind C-space
unbind C-u
unbind C-underscore
unbind C-v
unbind C-x
unbind C-w

# vim:ft=ratpoison
