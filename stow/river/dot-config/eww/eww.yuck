(defwidget block [poll cmd]
  (box :class "block"
       :space-evenly false
       :orientation "h"
  (eventbox
    :onscroll "bash -c 'BUTTON=${{} == "up" ? 4 : 5} ${cmd}'" 
  (button
    :onclick "bash -c 'BUTTON=1 ${cmd}'"
    :onmiddleclick "bash -c 'BUTTON=2 ${cmd}'"
    :onrightclick "bash -c 'BUTTON=3 ${cmd}'"
  (label :limit-width 80 :text {poll})))))


