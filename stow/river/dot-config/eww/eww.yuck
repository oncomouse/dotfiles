(deflisten tags `while true; do ristate -t | jq '.tags[0] | to_entries[].value[]' -r --unbuffered; sleep 1s; done`)
(deflisten title `while true; do ristate -w | jq '.title' -r --unbuffered; sleep 1s; done`)
(defpoll volume :interval "30s" `dwmblocks-volume.sh`)
