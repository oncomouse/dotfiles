#!/bin/sh

# This is the example configuration file for river.
#
# If you wish to edit this, you will probably want to copy it to
# $XDG_CONFIG_HOME/river/init or $HOME/.config/river/init first.
#
# See the river(1), riverctl(1), and rivertile(1) man pages for complete
# documentation.
# Setting some startup stuff
riverctl spawn "dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP=river"

# Setting some startup stuff
riverctl spawn "river-tag-overlay --background-colour 0x1d2021 --border-colour 0xa9b665 --square-active-occupied-colour 0xd79921 --square-active-background-colour 0xa9b665 --square-active-border-colour 0xd4be98 --tag-amount 11"
riverctl spawn "wlsunset -l 8.17 -L 123.80"
riverctl spawn "$HOME/.config/river/wlsunset.sh"
riverctl spawn "$HOME/.config/mako/mako.sh"
riverctl spawn "$HOME/.config/river/bindings.sh"
pkill -f liskin-media
riverctl spawn "liskin-media mpris-daemon"
pkill -f waybar
riverctl spawn "waybar"
# riverctl spawn "$HOME/.local/share/bin/gtk.sh"

# Borders
source ~/.cache/wal/colors.sh
riverctl border-color-focused "$(echo "$color6" | sed -e "s/#/0x/")"
riverctl border-color-unfocused "$(echo "$color0" | sed -e "s/#/0x/")"
riverctl border-width 1
riverctl background-color "$(echo "$color0" | sed -e "s/#/0x/")"
pkill -f swayidle
riverctl spawn "swayidle -w timeout 300 'swaylock -c $(echo "$color0" | sed -e "s/#//")' before-sleep 'swaylock -c $(echo "$color0" | sed -e "s/#//")'"
