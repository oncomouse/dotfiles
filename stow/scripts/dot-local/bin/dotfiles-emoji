#!/usr/bin/env bash
font="$(rofi-font "$1")"
offset="$(rofi-offset)"
# shellcheck disable=1083
rofi \
	-show emoji \
	-modi emoji \
	-location 1 \
	-theme-str "window { width: 100%; y-offset: $offset; }" \
	-emoji-format "{emoji} <span weight='bold'>{name}</span> [<span size='small'>({keywords})</span>]" \
	-font "$font"
# vim:ft=sh
