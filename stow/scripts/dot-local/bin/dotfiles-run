#!/usr/bin/env bash
font="$(rofi-font "$1")"
offset="$(rofi-offset)"
# shellcheck disable=1083
rofi \
	-match fuzzy \
	-auto-select \
	-font "$font" \
	-show drun \
	-show-icons \
	-location 1 \
	-theme themes/west-menu.rasi \
	-theme-str "window { y-offset: $offset; }" \
	-drun-display-format {name}
# vim:ft=sh
