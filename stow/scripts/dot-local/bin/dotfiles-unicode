#!/usr/bin/env bash
font=${1:-"FiraCode Nerd Font 12"}
sed -e "s/\([^:]\+\):\([^:]\+\):\([^:]\+\)/\1 (\3): \2/" < ~/dotfiles/data/unicode | \
rofi \
-match fuzzy \
-no-fixed-num-lines \
-dmenu \
-i \
-font "$font" \
-p "Unicode Cheatsheet: " \
"-location" \
"1" \
"-theme-str" \
"window { width: 100%; }" | cut -d " " -f 1 | tr -d '\n' | xclip -i -selection clipboard
# vim:ft=sh
