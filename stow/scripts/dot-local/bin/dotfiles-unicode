#!/usr/bin/env bash
font=${1:-"FiraCode Nerd Font 12"}
offset=0
if pgrep sdorfehs > /dev/null; then
	font="$(sdorfehs -c 'set font')"
	font_size="$(echo "$font" | cut -d "=" -f 2)"
	font="${font/:size=/ }"
	padding="$(sdorfehs -c 'set padding' | cut -d " " -f 2)"
	barpadding="$(sdorfehs -c 'set barpadding' | cut -d " " -f 2)"
	offset=$((padding + barpadding * 2 + font_size + 2))
fi
sed -e "s/\([^:]\+\):\([^:]\+\):\([^:]\+\)/\1 (\3): \2/" < ~/dotfiles/data/unicode | \
rofi \
-match fuzzy \
-no-fixed-num-lines \
-dmenu \
-i \
-font "$font" \
-p "Unicode Cheatsheet: " \
-location 1 \
-theme-str "window { width: 100%; y-offset: $offset; }" | cut -d " " -f 1 | tr -d '\n' | xclip -i -selection clipboard
# vim:ft=sh
