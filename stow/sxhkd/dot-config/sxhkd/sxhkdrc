## WM Independent

# terminal emulator
super + shift + Return
	kitty

# program launcher
super + p
	rofi -show combi -show-icons

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd | notify-send "sxhkd Reloaded"

# Lock screen
super + shift + x
	~/dotfiles/scripts/lock.sh

# Spawn powermenu
super + shift + p
	~/dotfiles/scripts/rofi/powermenu/powermenu.sh

# Take screenshot or select a screen region
{_, shift} + Print
    sleep 0.2; \
    scrot { ,-s} $HOME/'Seafile/My Library/Photos/Screenshots/%Y-%m-%d_%H%M%S-$wx$h_scrot.png'

## Dunst

super + grave
	dunstctl history-pop
super + ctrl + {_,shift} + space
	dunstctl {close, close-all}

## Audio

# Previous / Next / Play-Pause / Stop
XF86Audio{Prev,Next,Play,Stop}
	playerctl {previous,next,play-pause,stop}

# Raise or Lower Volume
XF86Audio{Lower,Raise}Volume
	~/dotfiles/scripts/volume.sh {down,up} 5%

# Mute
XF86AudioMute
	~/dotfiles/scripts/volume.sh mute

## DWM

# Tags:

# focus or send to the given desktop
super + {_,shift,ctrl,ctrl + shift} + {1-9}
	$HOME/dotfiles/scripts/dwm/tag.sh {view,tag,toggleview,toggletag} {0-8}

super + {_,shift} + 0
	dwm-msg run_command {view,tag} -1

super + {j,k}
	dwm-msg run_command focusstack {1,-1}

super + {i,d}
	dwm-msg run_command incnmaster {1,-1}

super + {_,shift} + {h,l}
	dwm-msg run_command {setmfact,setcfact} {0.05, -0.05}

super + shift + o
	dwm-msg run_command setcfact {0.00}

# Monitor:

super + {_, shift} + {comma,period}
	dwm-msg run_command {focus,tag}mon {-1,1}

# Quit or restart DWM:
super + {shift, ctrl + shift} + q
	dwm-msg run_command quit {0,1}

# switch to master
super + Return
	dwm-msg run_command zoom

# switch to last view
super + Tab
	dwm-msg run_command view 0

# kill the current client
super + shift + c
	dwm-msg run_command killclient 0

super + F5
	dwm-msg run_command xrdb

# Gaps:

super + alt + {_,shift,ctrl} + {h,l}
	dwm-msg run_command {incrgaps, incrogaps, incrigaps} {1,-1}
super + alt + {_,shift} + 0
	dwm-msg run_command {togglegaps, defaultgaps}
super + {_,alt,ctrl,shift} + {y,o}
	dwm-msg run_command {incrihgaps,incrivgaps,incrohgaps,incrovgaps} {1,-1}

# Layouts:

# tiled / floating / centeredmonocle / monocle
super + {t,f,m,shift + m}
	$HOME/dotfiles/scripts/dwm/layout.sh {0,1,2,3}
super + space
	dwm-msg run_command setlayoutsafe 0

# toggle floating
super + shift + space
	dwm-msg run_command togglefloating
