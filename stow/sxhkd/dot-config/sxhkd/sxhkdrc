## WM Independent

# terminal emulator
alt + shift + Return
	kitty

# program launcher
alt + p
	rofi -show combi -show-icons

# restart polybar
alt + q
	polybar-msg cmd restart

# make sxhkd reload its configuration files:
alt + Escape
	pkill -USR1 -x sxhkd | notify-send "sxhkd Reloaded"

# Lock screen
alt + shift + x
	~/dotfiles/scripts/lock

# Spawn powermenu
ctrl + alt + q
	~/dotfiles/scripts/polybar/powermenu

## Audio

# Previous / Next Song
XF86Audio{Prev,Next}
	playerctl {previous,next}

# Play / Pause Song
XF86AudioPlay
	playerctl play

# Raise or Lower Volume
XF86Audio{Lower,Raise}Volume
	ponymix {decrease,increase} 5%

# Mute
XF86AudioMute
	ponymix toggle

## DWM

# Tags:

# focus or send to the given desktop
alt + {_,shift,ctrl,ctrl + shift} + {1-9}
	dwm-msg run_command {view,tag,toggleview,toggletag} $((1<<{0-8}))

alt + {j,k}
	dwm-msg run_command focusstack {1,-1}

alt + {i,d}
	dwm-msg run_command incnmaster {1,-1}

alt + {h,l}
	dwm-msg run_command setmfact {0.05, -0.05}

# Monitor:

alt + {_, shift} + {comma,period}
	dwm-msg run_command {focus,tag}mon {-1,1}

# Management:

alt + shift + q
	dwm-msg run_command quit

# switch to master
alt + Return
	dwm-msg run_command zoom

# switch to last view
alt + Tab
	dwm-msg run_command view 0

# kill the current client
alt + shift + c
	dwm-msg run_command killcilent

# Layouts:

# tiled / floating / monocle
alt + {t,f,m}
	dwm-msg run_command setlayoutsafe {0,1,2}

# toggle floating
alt + shift + space
	dwm-msg run_command togglefloating
