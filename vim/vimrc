let &runtimepath .= ','.expand('~/dotfiles/vim/')
let &runtimepath .= ','.expand('~/dotfiles/vim/after/')
call plug#begin()
runtime bundle/common.vim
runtime bundle/neovim.vim
call plug#end()
runtime common.vim
let configs = [
  \ "deoplete",
  \ "ale",
  \ "autocomplete",
  \ "fuzzy",
  \ "git",
  \ "nvim-only",
  \ "statusline",
  \ "syntax",
  \ "theme",
  \ "todo",
  \ "writing",
\]
for file in configs
  let x = "config/".file.".vim"
  execute 'runtime' x
  endfor
runtime after.vim
