let &runtimepath .= ','.expand('~/dotfiles/vim/')
let &runtimepath .= ','.expand('~/dotfiles/vim/after/')
 call plug#begin()
runtime bundle/common.vim
runtime bundle/vim.vim
call plug#end()
runtime common.vim
let configs = [
  \ "fuzzy",
  \ "git",
  \ "syntax",
  \ "theme",
\]
for file in configs
  let x = "config/".file.".vim"
  execute 'runtime' x
endfor

function! Modified() abort
  return &mod == 0 ? '' : '[+] '
endfunction

set statusline=
set statusline+=%#CursorColumn#
set statusline+=\ %f
set statusline+=\ %{Modified()}
set statusline+=%#LineNr#
set statusline+=%=
set statusline+=%#CursorColumn#
set statusline+=\ %l:%c
set statusline+=\ 

set laststatus=2

runtime after.vim
" # vim:foldmethod=marker
